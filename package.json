{
  "name": "nova",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:a11y": "vitest run src/test/accessibility",
    "test:ui-compliance": "playwright test src/tests/accessibility/ui-compliance.test.tsx",
    "test:email": "vitest run src/server/email",
    "test:api": "vitest run src/app/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "verify:build": "bash scripts/verify-build.sh",
    "verify:build:win": "scripts\\verify-build.bat",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lhci autorun --config=lighthouserc-mobile.json",
    "accessibility:debug": "node -e \"require('./src/lib/utils/touch-targets.ts').debugTouchTargets()\"",
    "setup-db": "node scripts/setup-database.js",
    "setup-postgresql": "node scripts/setup-postgresql.js",
    "db:test": "node scripts/setup-postgresql.js --test-only",
    "websocket": "node scripts/start-websocket-server.js",
    "migrate": "tsx src/lib/database/migrate.ts up",
    "migrate:rollback": "tsx src/lib/database/migrate.ts rollback"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
