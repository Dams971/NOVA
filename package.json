    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.12",
    "lucide-react": "^0.525.0",
    "mysql2": "^3.6.5",
    "next": "15.3.5",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "server-only": "^0.0.1",
    "speakeasy": "^2.0.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
