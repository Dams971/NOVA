{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/rdv",
        "http://localhost:3000/chat",
        "http://localhost:3000/urgences"
      ],
      "startServerCommand": "npm run build && npm run start",
      "startServerReadyPattern": "ready on",
      "startServerReadyTimeout": 120000,
      "numberOfRuns": 3,
      "settings": {
        "preset": "mobile",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "cpuSlowdownMultiplier": 4,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0
        },
        "screenEmulation": {
          "mobile": true,
          "width": 375,
          "height": 667,
          "deviceScaleFactor": 2,
          "disabled": false
        },
        "emulatedFormFactor": "mobile",
        "locale": "fr-FR",
        "budgets": [
          {
            "path": "/*",
            "resourceSizes": [
              {
                "resourceType": "script",
                "budget": 400
              },
              {
                "resourceType": "stylesheet", 
                "budget": 75
              },
              {
                "resourceType": "image",
                "budget": 800
              },
              {
                "resourceType": "total",
                "budget": 1500
              }
            ],
            "resourceCounts": [
              {
                "resourceType": "third-party",
                "budget": 5
              }
            ]
          }
        ]
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["warn", {"minScore": 0.85}],
        "categories:performance": ["warn", {"minScore": 0.7}],
        "categories:seo": ["warn", {"minScore": 0.9}],
        "categories:pwa": "off",
        
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 4000}],
        "total-blocking-time": ["warn", {"maxNumericValue": 300}],
        "first-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "speed-index": ["warn", {"maxNumericValue": 5000}],
        "interactive": ["warn", {"maxNumericValue": 5000}],
        
        "color-contrast": "error",
        "button-name": "error", 
        "image-alt": "error",
        "label": "error",
        "link-name": "error",
        "meta-viewport": "error",
        "tabindex": "error",
        "heading-order": "error",
        "landmark-one-main": "error",
        "page-has-heading-one": "error",
        "bypass": "error",
        "focus-traps": "error",
        "focusable-controls": "error",
        "interactive-element-affordance": "error",
        "logical-tab-order": "error",
        "managed-focus": "error",
        "offscreen-content-hidden": "error",
        "use-landmarks": "error",
        "valid-lang": "error",
        "aria-allowed-attr": "error",
        "aria-command-name": "error",
        "aria-hidden-body": "error",
        "aria-hidden-focus": "error",
        "aria-input-field-name": "error",
        "aria-required-attr": "error",
        "aria-required-children": "error",
        "aria-required-parent": "error",
        "aria-roles": "error",
        "aria-valid-attr-value": "error",
        "aria-valid-attr": "error",
        
        "server-response-time": ["warn", {"maxNumericValue": 800}],
        "redirects": ["error", {"maxNumericValue": 0}],
        "uses-responsive-images": "warn",
        "efficient-animated-content": "warn", 
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "modern-image-formats": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "warn",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        "resource-summary:script:size": ["warn", {"maxNumericValue": 409600}],
        "resource-summary:stylesheet:size": ["warn", {"maxNumericValue": 76800}],
        "resource-summary:image:size": ["warn", {"maxNumericValue": 819200}],
        "resource-summary:total:size": ["warn", {"maxNumericValue": 1536000}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}